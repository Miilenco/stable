<div class="container mt-4 max-width-600">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title text-center">Log in</h2>
      <div class="form-container">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="mb-3">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
            </div>
            <div class="mb-3">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
            </div>

            <%= render "devise/shared/links" %>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <input name="user[remember_me]" type="hidden" value="0" autocomplete="off">
                <input class="form-check-input boolean optional" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
                <label class="form-check-label boolean optional" for="user_remember_me">Remember me</label>
              </div>
            <% end %>
            <%= f.button :submit, "Log in", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
