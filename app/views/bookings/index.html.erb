<!-- app/views/bookings/index.html.erb -->

<h1 class="px-3 py-2">My Bookings</h1>

<!-- Nav tabs -->
<ul class="nav nav-tabs mt-4 mb-4" id="bookingsTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button
      class="nav-link active"
      id="requests-tab"
      data-bs-toggle="tab"
      data-bs-target="#requests"
      type="button"
      role="tab"
      aria-controls="requests"
      aria-selected="true"
    >
      My Requests
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button
      class="nav-link"
      id="offers-tab"
      data-bs-toggle="tab"
      data-bs-target="#offers"
      type="button"
      role="tab"
      aria-controls="offers"
      aria-selected="false"
    >
      Incoming Requests
    </button>
  </li>
</ul>

<!-- Tab panes -->
<div class="tab-content" id="bookingsTabContent">
  <!-- My Requests Tab -->
  <div
    class="tab-pane fade show active"
    id="requests"
    role="tabpanel"
    aria-labelledby="requests-tab"
  >
    <h2 class="px-3 py-2 mb-4">My Requests</h2>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @my_requests.each do |booking| %>
        <div class="col">
          <div class="card h-100">
            <% if booking.horse.pictures.attached? %>
              <%= cl_image_tag booking.horse.pictures.first.key,
                               class: "card-img-top",
                               style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <%= image_tag "backup-image.png",
                            class: "card-img-top",
                            style: "height: 200px; object-fit: cover;" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= booking.horse.name %></h5>
              <p class="card-text">Status: <%= booking.status.capitalize %></p>
              <%= link_to "View Booking", booking_path(booking), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Incoming Requests Tab -->
  <div
    class="tab-pane fade"
    id="offers"
    role="tabpanel"
    aria-labelledby="offers-tab"
  >
    <h2 class="px-3 py-2 mb-4">Incoming Requests</h2>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @incoming_requests.each do |booking| %>
        <div class="col">
          <div class="card h-100">
            <% if booking.horse.pictures.attached? %>
              <%= cl_image_tag booking.horse.pictures.first.key,
                               class: "card-img-top",
                               style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <%= image_tag "backup-image.png",
                            class: "card-img-top",
                            style: "height: 200px; object-fit: cover;" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= booking.horse.name %></h5>
              <p class="card-text">Status: <%= booking.status.capitalize %></p>
              <%= link_to "View Booking", booking_path(booking), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
