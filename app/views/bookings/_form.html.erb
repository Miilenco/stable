<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title text-center">Request a Cover</h2>
      <div class="form-container">
        <%= simple_form_for [@horse, @booking], html: { data: { controller: "datepicker", datepicker_price_at_booking_value: @horse.stud_fee } } do |f| %>
          <%= f.hidden_field :horse_id, value: @horse.id %>

          <div class="mb-3">
            <%= f.input :start_date, as: :string, label: "Start Date", input_html: { class: "form-control", data: { datepicker_target: "startDate" } } %>
          </div>

          <div class="mb-3">
            <%= f.input :end_date, as: :string, label: "End Date", input_html: { class: "form-control", data: { datepicker_target: "endDate" } } %>
          </div>

          <%# Hidden input for duration %>
          <input type="hidden" id="duration" data-datepicker-target="duration">

          <%# Total cost display with £ sign, styled properly %>
          <div class="mb-3">
            <label>Total Cost (£)</label>
            <div class="input-group">
              <span class="input-group-text bg-transparent border-0">£</span>
              <input type="text" id="total_cost" class="form-control border-0 bg-light" data-datepicker-target="totalCost" readonly>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "Request Cover", class: "btn btn-primary px-4 mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
