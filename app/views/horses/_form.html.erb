<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title text-center">Add a New Horse</h2>
      <div class="form-container">
        <%= simple_form_for horse do |f| %>
          <div class="mb-3">
            <%= f.input :name, input_html: { class: "form-control" } %>
          </div>

          <div class="mb-3">
            <%= f.input :breed, input_html: { class: "form-control" } %>
          </div>

          <div class="mb-3">
            <%= f.input :age, collection: (0..40).to_a, prompt: "Select Age", input_html: { class: "form-control" } %>
          </div>

          <div class="mb-3">
            <%= f.input :location, input_html: { class: "form-control" } %>
          </div>

          <div class="mb-3">
            <%= f.input :stud_fee, as: :string, input_html: { class: "form-control currency-input" }, label: "Stud Fee (Â£)" %>
          </div>

          <div class="mb-3">
            <%= f.input :pedigree, as: :text, input_html: { class: "form-control", rows: 3 } %>
          </div>

          <div class="mb-3">
            <%= f.input :progeny_success, as: :text, input_html: { class: "form-control", rows: 3 } %>
          </div>

          <div class="mb-3">
            <%= f.input :race_record, as: :text, input_html: { class: "form-control", rows: 3 } %>
          </div>

          <div class="mb-3">
            <%= f.input :pictures, as: :file, input_html: { class: "form-control", rows: 3, multiple: true } %>
          </div>

          <div class="text-center">
            <%= f.submit "Save Horse", class: "btn btn-primary px-4 mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
